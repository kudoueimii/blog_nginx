<p id="notice"><%= notice %></p>

<h1>Blogs</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.title %></td>
        <td><%= blog.content %></td>
        <td><%= link_to 'Show', blog, class:"a"   %></td>
        <td><%= link_to 'Edit', edit_blog_path(blog), class:"a" %></td>
        <td><%= link_to 'Destroy', blog, method: :delete, data: { confirm: 'Are you sure?' } , class:"a"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<section>
<%= link_to 'New Blog', new_blog_path, class:"btn_06" %>
</section>